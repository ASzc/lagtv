!!! 5
%html
  %head
    %title Life's a Glitch TV
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %header
      = render "/layouts/menu"
      .social
        .container
          .pull-left
            = link_to "Login or register", "#"
          .pull-right
            = link_to "YT", "http://www.youtube.com/lifesaglitchtv", :target => "_blank", :class => "icons-youtube"
            = link_to "T", "http://www.twitter.com/lifesaglitchtv", :target => "_blank", :class => "icons-twitter"
            = link_to "FB", "http://www.facebook.com/lagtv", :target => "_blank", :class => "icons-facebook"
      .logo_line
        .container
          = image_tag "logo.png", :class => "logo"
    = yield  

    %footer
      .container
        %p.pull-left &copy Copyright LagTV 2012.
        %ul.pull-right
          %li= link_to "LagTV Channel 1", "http://www.youtube.com/lifesaglitchtv1"
          %li= link_to "LagTV Channel 2", "http://www.youtube.com/lifesaglitchtv2"
          %li= link_to "LagTV Store", "http://d2dgamer.wordans.com/my/boutique#add_comment"
          %li= link_to "Novawar Solo Channel", "http://www.youtube.com/user/computerplayer1"
          %li= link_to "MaximusBlack Solo Channel", "http://www.youtube.com/user/MaximusBlack"
          %li= link_to "Novawar Stream", "http://www.twitch.tv/novawar"
          %li= link_to "MaximusBlack Stream", "http://www.twitch.tv/lagtvmaximusblack"
          %li= link_to "Machinima Realm", "http://www.youtube.com/machinimarealm"
          %li= link_to "About", main_app.about_path

-#
  .logo
  = image_tag "logo.png"

  - if current_user
    %p.pull-right
      Logged in as 
      = current_user.name
      = "(#{current_user.role.titleize})"



      
            
  .main.container
    - if flash[:notice]
      .alert.alert-success.fade.in{ 'data-alert' => 'alert' }
        %a.close{ :href => "#", :data => {:dismiss => "alert"} } &times;
        = flash[:notice]
    - if flash[:alert]
      .alert.alert-error.fade.in{ 'data-alert' => 'alert' }
        %a.close{ :href => "#", :data => {:dismiss => "alert"} } &times;
        = flash[:alert]
    
    = yield
  %footer.container
    %p &copy Copyright LagTV 2012.