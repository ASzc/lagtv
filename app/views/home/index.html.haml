.page#home
  .row
    .span8
      %ul.nav.nav-tabs#channel_tabs
        %li= link_to "StarCraft", "#starcraft"
        %li= link_to "Minecraft", "#minecraft"
       
      .tab-content
        .tab-pane#starcraft
          = render 'channel', :channel => @lifesaglitchtv
        .tab-pane#minecraft
          = render 'channel', :channel => @lifesaglitchtv2
      
    .span4.replay_panel
      %h2 Upload a replay
      %p
      - if current_user
        Please complete the form below to upload a replay file for casting.
        .upload_panel
          = simple_form_for @replay, :html => { :class => 'form-horizontal' } do |f|
            = f.input :replay_file
            = f.input :league, :collection => Replay::LEAGUES.map {|c| [ c.titleize, c ] }
            = f.input :players, :collection => Replay::PLAYERS.map {|c| [ c.titleize, c ] }
            = f.input :category_id, :label => "Category", :collection => @categories.map {|c| [ c.name, c.id ] }
            = f.input :protoss
            = f.input :terran
            = f.input :zerg
            = f.input :title
            = f.input :description
            = f.button :submit, :value => "Upload Replay", :class => "btn btn-large"
      -else
        If you have a replay that you would like cast on LagTV, then you need to login to your account before you can upload it.
        .login_register_panel
          %p.buttons
            = form_tag sessions_path do
              .field
                = label_tag :email, "Email"
                = text_field_tag :email, params[:email]
              .field
                = label_tag :password, "Password"
                = password_field_tag :password
              = submit_tag "Login", :class => "btn btn-large"
          %p
            If you do not yet have an account then you first need to register one.
          %p.buttons
            = link_to "Register", register_path, :class => "btn btn-large"
      