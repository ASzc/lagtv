%h1 Welcome to LagTV!

.content#home
  .left
    =raw @latest_video.embed_html5(:width => '638', :height => '390')

    .videos
      - @videos.each do |video|
        .recent
          = link_to image_tag(video.thumbnails.first.url), video.player_url
          = link_to video.title, video.player_url, :target => "_blank"

  .right
    %h2 Upload a replay
