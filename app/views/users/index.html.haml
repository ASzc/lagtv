.page#user_list
  %h1= pluralize(@users.count, 'User')


  .row
    .span9
      %table.table.table-striped
        %thead
          %tr
            %th Name
            %th Role
            %th Active
            %th Joined
        %tbody
          - @users.each do |user|
            %tr
              %td
                .name= user.name
                .email= user.email
              %td= user.role.titleize
              %td= user.active? ? 'Yes' : 'No'
              %td
                = time_ago_in_words(user.created_at) 
                ago
      = will_paginate @users

    .span3
      %h3 Controls
      %p Filtering and other cool stuff go here