.page#my-profile
  .row
    .span7
      .row
        .span7
          .row
            .span2
              #avatar
                = image_tag(@user.avatar_url(150))
              #change-avatar
                Change
            .span2
              #info
                %p.title
                  = @user.name
                %p.joined          
                  Joined
                  = time_ago_in_words(@user.created_at)
                  ago
      .row
        .span7
          = simple_form_for @user, :html => { :class => 'form-horizontal' } do |f|
            = f.input :name
            = f.input :email
            = f.input :password
            = f.input :password_confirmation
            - if can? :manage, @user
              = f.input :role, :collection => User::ROLES.map {|c| [ c.titleize, c ] }
            = f.button :submit
    .span5
      - if(@user.replays.empty?)
        %h2 You have no uploaded replays
        %p
          Upload a replay from the
          = link_to "home page", "/"
      -else
        %h2 Your lastest replays
      #replays
        %ul
          - @user.replays.find_all{|r| !r.expired?}.take(10).each do |replay|
            %li{ :id => "replay_#{replay.id}" }
              %p.title
                = replay.title
              %p.uploaded
                Uploaded:
                = time_ago_in_words(replay.created_at)
                ago
              %p.expires
                Expires:
                - if(replay.expired?)
                  Expired
                - else
                  = distance_of_time_in_words_to_now(replay.expires_at)
                  from now