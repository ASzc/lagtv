%h3 Register new account
= simple_form_for @user, :validate => true, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :email
  = f.input :password
  = f.input :password_confirmation
  
  .form-actions
    = f.button :submit, :value => "Register", :class => "btn btn-large btn-primary"
    = link_to "Cancel", root_path, :class => "btn btn-large"
